<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_cbcbcb">
    <include
        android:id="@+id/jrmetal_basetop"
        layout="@layout/basetoplayout"
        android:visibility="gone"
        />
    <include
        android:id="@+id/jrmetal_top"
        layout="@layout/goldtoplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jrmetal_basetop"
        />
    <com.le.stock.stockdemo.view.SmartTabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainchart_smart_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/jrmetal_top"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:stl_defaultTabTextColor="#666666"
        app:stl_defaultTabTextSize="16sp"
        app:stl_indicatorColor="#2591FF"
        app:stl_indicatorCornerRadius="1.5dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="2dp"
        app:stl_indicatorWithoutPadding="true"
        app:stl_distributeEvenly="true"
        app:stl_underlineColor="#00000000"/>
    <include
        android:id="@+id/gold_bottem_layout"
        layout="@layout/goldbottemlayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    <FrameLayout
        android:id="@+id/fl_jrmetal_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainchart_smart_tab"
        android:layout_above="@id/gold_bottem_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">
    </FrameLayout>


</RelativeLayout>
